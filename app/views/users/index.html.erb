<h1>user_search</h1>
<%= form_tag users_path, method: 'get' do %>
<div>
  <%= label_tag "name" %>
  <%= text_field_tag :name, params[:name] %>
</div>
<div>
  <%= label_tag "hobby" %>
  <%= select_tag :hobby, options_from_collection_for_select(
                            Hobby.all,
                            :id,
                            :name),
                            :include_blank => 'select' %>
</div>
<div>
  <%= submit_tag "search" %>
</div>
  <% end %>
  <% if @users && @users.count != 0 %>
<div>
  <%= @users.count %>
</div>
<div>
  <table border="1" cellpadding="5">
    <tr>
      <td>
       name 
      </td>
      <td>
        mail_address
      </td>
      <td>
        birthday
      </td>
      <td>
        hobbies
      </td>
    </tr>
    <%= render @users %>
  </table>
</div>
<% end %>
